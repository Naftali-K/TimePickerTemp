<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:gravity="center|top"
        android:padding="16dp">

        <Button
            android:id="@+id/bottom_sheet_dialog_time_picker_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Bottom Sheet Dialog Time Picker"/>

        <TextView
            android:id="@+id/time1_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:drawableTop="@drawable/ic_time"
            android:drawablePadding="16dp"
            android:background="@android:drawable/editbox_background"
            android:elevation="10dp"
            android:hint="Select time Watch"/>

        <TextView
            android:id="@+id/time2_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:drawableTop="@drawable/ic_time"
            android:drawablePadding="16dp"
            android:background="@android:drawable/editbox_background"
            android:elevation="10dp"
            android:hint="Select time Spinner"/>

        <TextView
            android:id="@+id/time5_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:drawableTop="@drawable/ic_time"
            android:drawablePadding="16dp"
            android:background="@android:drawable/editbox_background"
            android:elevation="10dp"
            android:hint="Select time From Dev"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="#62626262"/>

        <TextView
            android:id="@+id/time3_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Time"/>

        <TimePicker
            android:id="@+id/time_picker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:numbersTextColor="@color/purple_700"
            android:numbersBackgroundColor="@color/teal_200"
            android:numbersInnerTextColor="@color/purple_500"
            android:numbersSelectorColor="@color/teal_700"
            style="@style/MyTimePickerStyle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="#62626262"/>

        <TextView
            android:id="@+id/time4_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Time"/>

        <TimePicker
            android:id="@+id/time_picker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="clock"
            android:numbersTextColor="@color/purple_700"
            android:numbersBackgroundColor="@color/teal_200"
            android:numbersInnerTextColor="@color/purple_500"
            android:numbersSelectorColor="@color/teal_700"
            style="@style/MyTimePickerStyle"/>

    </LinearLayout>

</ScrollView>

